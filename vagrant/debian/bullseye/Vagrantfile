Vagrant.configure("2") do |config|

  config.vm.box = "debian/bullseye64"
  config.vm.define "debian-1"
  config.vm.hostname = "debian-1"
  config.vm.network "forwarded_port", guest: 22, host: 2222, auto_correct: true
  config.vm.usable_port_range = 2200..2222 # example range for the SSH.
  config.ssh.host = "DevaPC" # use the base host's hostname.
  config.ssh.insert_key = true # do not use the global public image key.
  config.ssh.forward_agent = true # have already the agent keys preconfigured for ease.

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "../../../ansible/playbooks/docker.yaml"
    ansible.inventory_path = "../../../ansible/inventory/hosts.ini" # that's probably perplexing things more.
    ansible.extra_vars = {
      nodes: "#{config.vm.hostname}",
    }
    # ansible.ask_become_pass = true
  end
end